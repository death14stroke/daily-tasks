<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DailyTasks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ebony</item>
        <item name="colorPrimaryVariant">@color/ebony_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/scooter</item>
        <item name="colorSecondaryVariant">@color/dodger_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColorSecondary">@color/geyser</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="materialAlertDialogTheme">@style/Theme.DailyTasks.Dialog</item>
    </style>

    <style name="Theme.DailyTasks.Splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenIconBackgroundColor">@color/ebony</item>
        <item name="windowSplashScreenBackground">@color/ebony</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
<!--        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ic_gallery</item>-->
        <item name="postSplashScreenTheme">@style/Theme.DailyTasks</item>

        <item name="android:navigationBarColor">@color/ebony</item>
    </style>

    <style name="Theme.DailyTasks.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorSurface">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="BottomSheetMenuItemStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Theme.DailyTasks.TaskItem">
        <item name="colorTaskIconIncompleteBg">@color/twilight_blue</item>
        <item name="colorTaskIconCompleteBg">@color/geyser</item>
        <item name="colorTaskCompletePrimary">@color/geyser</item>
        <item name="colorTaskCompleteSecondary">@color/geyser</item>
    </style>

    <style name="CircularImageAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.DailyTasks.CreateTaskActivity">
        <item name="colorPrimary">@color/dodger_blue</item>
        <item name="colorPrimaryVariant">@color/scooter</item>

        <item name="android:colorBackground">@color/dodger_blue</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:ambientShadowAlpha">0.4</item>
        <item name="android:spotShadowAlpha">0.8</item>

        <item name="colorInputBorder">@color/dodger_blue</item>
    </style>

    <style name="Theme.DailyTasks.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/scooter</item>
    </style>

    <style name="CloseIconToolbarStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="CreateTaskIconStyle">
        <item name="tint">@color/dodger_blue</item>
        <item name="android:background">@color/black_squeeze</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/ebony_light</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/ebony_light</item>
    </style>

    <style name="TextLabelStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.DailyTasks.TextInput" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/scooter</item>
        <item name="colorControlHighlight">@color/geyser</item>
        <item name="colorInputBorder">@color/dodger_blue</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/black_squeeze</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@drawable/box_color_selector</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/geyser</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/radio_text_selector</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/dodger_blue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/dodger_blue</item>
        <item name="android:stateListAnimator">@animator/elevation_animator</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/scooter</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/scooter</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/dodger_blue</item>
    </style>

    <style name="Theme.DailyTasks.Toolbar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.DailyTasks.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorSearchBackground">@color/twilight_blue</item>
    </style>

    <style name="Theme.DailyTasks.CompletedTaskIconImageView">
        <item name="colorTaskIconCompleteBg">@color/scooter</item>
    </style>

    <style name="Theme.DailyTasks.BarChart">
        <item name="colorBarChartBarNormal">@color/bar_day_mode</item>
        <item name="colorBarChartBarHighlight">@color/dodger_blue</item>
    </style>

    <style name="Theme.DailyTasks.ProductivityStats">
        <item name="colorCardBackground">@color/twilight_blue</item>
    </style>

    <style name="Theme.DailyTasks.RoundIcon">
        <item name="colorIconBackground">@color/scooter</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>